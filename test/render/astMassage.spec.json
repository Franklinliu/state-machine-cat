[{
    "title": "explodes a broadcast_out transition",
    "input": {
        "states": [{
            "name":"a"
        }, {
            "name":"b"
        }, {
            "name":"c"
        }, {
            "name":"d"
        }],
        "transitions": [{
            "from": "a",
            "to": "*",
            "type": "broadcast_out"
        }, {
            "from": "c",
            "to": "d",
            "type": "regular"
        }]
    },
    "expectedOutput" : [{
        "from": "a",
        "to": "b",
        "type": "regular"
    }, {
        "from": "a",
        "to": "c",
        "type": "regular"
    }, {
        "from": "a",
        "to": "d",
        "type": "regular"
    }]
}, {
    "title": "explodes a broadcast_in transition",
    "input": {
        "states": [{
            "name":"a"
        }, {
            "name":"b"
        }, {
            "name":"c"
        }, {
            "name":"d"
        }],
        "transitions": [{
            "from": "*",
            "to": "a",
            "type": "broadcast_in"
        }, {
            "from": "c",
            "to": "d",
            "type": "regular"
        }]
    },
    "expectedOutput" : [{
        "from": "b",
        "to": "a",
        "type": "regular"
    }, {
        "from": "c",
        "to": "a",
        "type": "regular"
    }, {
        "from": "d",
        "to": "a",
        "type": "regular"
    }]
}, {
    "title": "leaves regular transitions alone",
    "input": {
        "states": [{
            "name":"a"
        }, {
            "name":"b"
        }, {
            "name":"c"
        }, {
            "name":"d"
        }],
        "transitions": [{
            "from": "a",
            "to": "c",
            "type": "regular"
        }, {
            "from": "c",
            "to": "d",
            "type": "regular"
        }]
    },
    "expectedOutput": []
}, {
    "title": "don't transition to 'initial' state",
    "input": {
        "states": [{
            "name":"initial",
            "type":"initial"
        }, {
            "name":"a"
        }, {
            "name":"b"
        }, {
            "name":"c"
        }, {
            "name":"final",
            "type":"final"
        }],
        "transitions": [{
            "from": "a",
            "to": "*",
            "type": "broadcast_out"
        }]
    },
    "expectedOutput": [{
        "from": "a",
        "to": "b",
        "type": "regular"
    }, {
        "from": "a",
        "to": "c",
        "type": "regular"
    }, {
        "from": "a",
        "to": "final",
        "type": "regular"
    }]
}, {
    "title": "don't transition from 'final' state",
    "input": {
        "states": [{
            "name":"initial",
            "type":"initial"
        }, {
            "name":"a"
        }, {
            "name":"b"
        }, {
            "name":"c"
        }, {
            "name":"final",
            "type":"final"
        }],
        "transitions": [{
            "from": "*",
            "to": "a",
            "type": "broadcast_in"
        }]
    },
    "expectedOutput": [{
        "from": "initial",
        "to": "a",
        "type": "regular"
    }, {
        "from": "b",
        "to": "a",
        "type": "regular"
    }, {
        "from": "c",
        "to": "a",
        "type": "regular"
    }]
}]
